<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.potenza_pvt_ltd.AAPS.SlotReport">

        <EditText
            android:id="@+id/etxt_fromdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="From Date"
            android:layout_marginTop="102dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5" />

        <EditText
            android:id="@+id/etxt_todate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="To Date"
            android:layout_below="@+id/etxt_fromdate"
            android:layout_alignLeft="@+id/etxt_fromdate"
            android:layout_alignStart="@+id/etxt_fromdate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date From"
            android:id="@+id/textView32"
            android:layout_alignTop="@+id/etxt_fromdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date To"
            android:id="@+id/textView33"
            android:layout_below="@+id/etxt_fromdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export"
            android:id="@+id/button5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="export"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner8"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/etxt_fromdate"
        android:layout_alignStart="@+id/etxt_fromdate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transporter"
        android:id="@+id/textView36"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
