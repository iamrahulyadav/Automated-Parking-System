<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.potenza_pvt_ltd.AAPS.Masters"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="6">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager"
            android:id="@+id/button_manager"
            android:onClick="manager"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/button_tariff"
            android:layout_alignEnd="@+id/button_tariff"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator"
            android:id="@+id/button_operator"
            android:onClick="Operator"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_manager" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehichle Type"
            android:id="@+id/button_vehicle_type"
            android:onClick="Vehicle_type"
            android:layout_above="@+id/button_ps"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Slot"
            android:id="@+id/button_ps"
            android:onClick="parking_slot"
            android:layout_above="@+id/button_transporter"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transporter"
            android:id="@+id/button_transporter"
            android:onClick="transporter"
            android:layout_above="@+id/button_tariff"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tariff"
            android:id="@+id/button_tariff"
            android:onClick="tariff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

</LinearLayout>
