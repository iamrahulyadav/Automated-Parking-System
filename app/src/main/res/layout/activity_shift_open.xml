<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.potenza_pvt_ltd.AAPS.ShiftOpen">

    <EditText
        android:id="@+id/emailFieldso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter Manager ID" >

        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/passwordFieldso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailFieldso"
        android:layout_below="@+id/emailFieldso"
        android:ems="10"
        android:hint="Enter Manager Password"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/shiftopenbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift Open"
        android:layout_below="@+id/spinner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slot Assigned : "
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_below="@+id/passwordFieldso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

</RelativeLayout>
